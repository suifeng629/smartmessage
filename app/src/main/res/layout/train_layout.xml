<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_top_bottom"
              android:paddingBottom="@dimen/padding_top_bottom"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="13:03"
            android:textColor="@color/pop_gray"
            android:textSize="@dimen/time_textsize"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/model_title_height"
            android:background="@color/model_title_bg">
        <TextView
                android:id="@+id/codetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-thin"
                android:text="@string/train"
                android:textColor="#fff"
                android:textSize="@dimen/model_title_textsize"/>

        <ImageView
                android:id="@+id/action_setting_ibtn"
                android:src="@drawable/icon_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/contentLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/myborder"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/model_title_bottom"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/train_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="出发地"
                    android:textColor="@color/model_title_bg"
                    android:textSize="@dimen/sms_title_textsize"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/train_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:text="车次"
                        android:textSize="20sp"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/icon_down_arrow"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/train_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/train_des"
                    android:textSize="@dimen/sms_title_textsize"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="20dip"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/train_gotime"
                    android:textColor="#666666"
                    android:textSize="@dimen/sms_title_textsize"/>


            <TextView
                    android:id="@+id/train_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="日期"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/train_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="时间"
                    android:textColor="#666666"
                    android:textSize="18sp"/>
        </LinearLayout>

        <View
                android:id="@+id/list_item_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/colorAccent"/>

        <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:gravity="center"
                android:paddingBottom="20dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/train_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/train_seat"
                    android:textColor="#666666"
                    android:textSize="24sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
