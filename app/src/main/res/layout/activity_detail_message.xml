<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              tools:context="com.ctid.intelsmsapp.activity.DetailMessageActivity">
    <include
            layout="@layout/title_item_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_gravity="center"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/title_bar_height">
            <ListView
                    android:id="@+id/detailMessageListView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">
            </ListView>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/id_bottom_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_alignParentBottom="true"
                android:visibility="gone">
            <include
                    layout="@layout/bottom_menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/id_bottom_input_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_alignParentBottom="true"
                android:visibility="gone">
            <include
                    layout="@layout/menu_keyboard_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
