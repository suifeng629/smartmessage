<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_top_bottom"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="13:03"
            android:textColor="@color/pop_gray"
            android:textSize="@dimen/time_textsize"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/model_title_height"
            android:background="@color/model_title_bg">
        <TextView
                android:id="@+id/codetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-thin"
                android:text="@string/code"
                android:textColor="#fff"
                android:textSize="@dimen/model_title_textsize"/>

        <ImageView
                android:id="@+id/action_setting_ibtn"
                android:src="@drawable/icon_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/myborder"
            android:orientation="vertical">
        <LinearLayout
                android:id="@+id/contentLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top_bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/code"
                    android:textSize="34sp"/>

            <TextView
                    android:id="@+id/code_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#33B6EA"
                    android:text="此处是验证码"
                    android:textSize="40sp"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/colorAccent"/>
        <TextView
                android:id="@+id/code_text"
                android:text="@string/smscontent"
                android:textSize="18sp"
                android:layout_margin="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/list_item_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/colorAccent"/>

        <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/list_item_card_button_1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dip"
                    android:background="@color/bg_gray"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="@string/copycode"
                    android:textSize="25sp"
                    android:textStyle="normal"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
