<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_top_bottom"
              android:paddingBottom="@dimen/padding_top_bottom"
              android:paddingLeft="@dimen/padding_left_right"
              android:paddingRight="@dimen/padding_left_right"
              android:orientation="vertical">

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="13:03"
            android:textColor="@color/pop_gray"
            android:textSize="@dimen/time_textsize"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/model_title_height"
            android:background="@color/model_title_bg">
        <TextView
                android:id="@+id/banktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-thin"
                android:text="@string/bank"
                android:textColor="#fff"
                android:textSize="@dimen/model_title_textsize"/>

        <ImageView
                android:id="@+id/action_setting_ibtn"
                android:src="@drawable/icon_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/contentLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/model_title_bottom"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/bank_deal_count"
                    android:textColor="@color/model_title_bg"
                    android:textSize="@dimen/sms_title_textsize"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/bank_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-thin"
                    android:text="100.89"
                    android:textColor="@color/model_title_bg"
                    android:textSize="@dimen/sms_title_textsize"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:layout_marginBottom="@dimen/padding_top_bottom"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/bank_card_number"
                    android:textColor="#666666"
                    android:textSize="@dimen/sms_title_textsize"/>


            <TextView
                    android:id="@+id/bank_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="*********1234"
                    android:textSize="@dimen/sms_body_textsize"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:layout_marginBottom="@dimen/padding_top_bottom"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/bank_deal_time"
                    android:textColor="#666666"
                    android:textSize="@dimen/sms_title_textsize"/>


            <TextView
                    android:id="@+id/bank_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="9月26日18：35"
                    android:textSize="@dimen/sms_body_textsize"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:layout_marginBottom="@dimen/padding_top_bottom"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/bank_buss_desc"
                    android:textColor="#666666"
                    android:textSize="@dimen/sms_title_textsize"/>


            <TextView
                    android:id="@+id/bank_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:fontFamily="sans-serif-light"
                    android:text="消费"
                    android:textSize="@dimen/sms_body_textsize"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_top_bottom"
                android:layout_marginRight="@dimen/padding_top_bottom"
                android:layout_marginBottom="@dimen/padding_top_bottom"
                android:weightSum="100"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/bank_balance"
                    android:textColor="#666666"
                    android:textSize="@dimen/sms_title_textsize"/>


            <TextView
                    android:id="@+id/bank_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="9999"
                    android:textSize="@dimen/sms_body_textsize"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
